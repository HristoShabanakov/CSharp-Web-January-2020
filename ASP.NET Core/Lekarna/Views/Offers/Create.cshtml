@using Lekarna.ViewModels.Offers

@model CreateOfferInputModel 

<h1>Create Offer</h1>
<div class="col-md-4">
    <form asp-controller="Offers" asp-action="Create" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Offer"></label>
            <input asp-for="Offer" class="form-control" />
            <span asp-validation-for="Offer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Medicine"></label>
            <input asp-for="Medicine" class="form-control" />
            <span asp-validation-for="Medicine" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MedicineType"></label>
            <select asp-for="MedicineType" class="form-control" asp-items="@Html.GetEnumSelectList<MedicineType>()"></select>
            <span asp-validation-for="MedicineType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PriceWithVAT"></label>
            <input asp-for="PriceWithVAT" class="form-control" />
            <span asp-validation-for="PriceWithVAT" class="text-danger"></span> 
        </div>
        <div class="form-group">
            <label asp-for="PriceWithoutVAT"></label>
            <input asp-for="PriceWithoutVAT" class="form-control" />
            <span asp-validation-for="PriceWithoutVAT" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OfferTermination"></label>
            <input asp-for="OfferTermination" class="form-control" />
            <span asp-validation-for="OfferTermination" class="text-danger"></span> 
        </div>
        <div class="form-group">
            <label asp-for="OrderType"></label>
            <select asp-for="OrderType" class="form-control" asp-items="@Html.GetEnumSelectList<OrderType>()"></select>
            <span asp-validation-for="OrderType" class="text-danger"></span>
        </div>
        <hr />

        <input type="submit" value="Order" class="btn btn-primary" />

    </form>
</div>

